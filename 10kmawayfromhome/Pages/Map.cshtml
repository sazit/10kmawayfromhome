    <div id="mapid"></div>

    <script>
        var map = L.map('mapid').setView([-33.88310, 151.205991], 13);
        var marker;
        var circle;

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        /*
        
        marker = L.marker([-33.88310, 151.205991]).addTo(map)
            .bindPopup('Your location')
            .openPopup();
        
        var circle = L.circle([-33.88310, 151.205991], {
            color: 'red',
            fillColor: '#f03',
            fillOpacity: 0.5,
            radius: 5000
        }).addTo(map);

*/

        marker = L.marker([-33.88310, 151.205991]).addTo(map)
            .bindPopup('Your location')
            .openPopup();

        circle = L.circle([-33.88310, 151.205991], {
            color: 'red',
            fillColor: '#f03',
            fillOpacity: 0.5,
            radius: 5000
        }).addTo(map);

        function myFunction(arr) {
            map.removeLayer(marker);
            map.removeLayer(circle);
            if (arr.length > 0) {

                marker = L.marker([arr[0].lat, arr[0].lon], { draggable: 'true' }).addTo(map)
                    .bindPopup('Your location')
                    .openPopup();

                circle = L.circle([arr[0].lat, arr[0].lon], {
                    color: 'red',
                    fillColor: '#f03',
                    fillOpacity: 0.5,
                    radius: 5000
                }).addTo(map);

                map.panto([arr[0].lat, arr[0].lon]);

            }
            else {
                document.getElementById('results').innerHTML = "Sorry, no results...";
            }
        }

        function addr_search() {
            var inp = document.getElementById("addr");
            //inp.replace(/\s/g, '+');
            var xmlhttp = new XMLHttpRequest();
            var url = "https://nominatim.openstreetmap.org/search?format=json&limit=3&q=" + inp.value;
            xmlhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    var myArr = JSON.parse(this.responseText);
                    myFunction(myArr);
                }
            };
            xmlhttp.open("GET", url, true);
            xmlhttp.send();
        }

        function onMapClick(e) {   
            marker.on('dragend', function (event) {
                map.removeLayer(marker);
                map.removeLayer(circle);
                var position = marker.getLatLng();
                circle = L.circle([position.lat, position.lng], {
                    color: 'red',
                    fillColor: '#f03',
                    fillOpacity: 0.5,
                    radius: 5000
                }).addTo(map);
                marker.setLatLng(new L.LatLng(position.lat, position.lng), { draggable: 'true' });
                map.panTo(new L.LatLng(position.lat, position.lng))
            });
            map.addLayer(marker);
        };
        map.on('click', onMapClick);
    </script>

